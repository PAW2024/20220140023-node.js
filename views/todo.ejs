<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Todo List</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
  <style>
    body {
      background-color: #f9f9f9;
    }

    h1 {
      font-family: 'Arial Black', sans-serif;
      font-size: 2.5rem;
      color: #333;
    }

    .add-btn-container {
      display: flex;
      justify-content: center;
      margin-bottom: 20px;
    }

    .add-btn {
      font-size: 1.2rem;
      padding: 10px 20px;
    }

    .card {
      border: none;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
    }

    .card-title {
      font-size: 1.25rem;
      color: #007bff;
    }

    .btn {
      font-size: 0.9rem;
    }

    .modal-content {
      border-radius: 10px;
    }

    .footer {
      background-color: #f1f1f1;
      color: #555;
      font-size: 1rem;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-4">PERSIPA</h1>

    <!-- Button to open Add Todo Modal -->
    <div class="add-btn-container">
      <button class="btn btn-primary add-btn" data-bs-toggle="modal" data-bs-target="#addModal">Add Todo</button>
    </div>

    <!-- List of Todos -->
    <div id="todoContainer" class="row g-3">
      <% todos.forEach(todo => { %>
        <div class="col-md-4">
          <div class="card" data-id="<%= todo.id %>">
            <div class="card-body">
              <h5 class="card-title">Todo</h5>
              <p class="card-text"><%= todo.task %></p>
              <button class="btn btn-sm btn-success editBtn">Edit</button>
              <button class="btn btn-sm btn-danger deleteBtn">Delete</button>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <!-- Add Todo Modal -->
  <div id="addModal" class="modal fade" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="addModalLabel">Add Todo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="addTodoForm">
            <div class="mb-3">
              <label for="newTask" class="form-label">Task</label>
              <input type="text" id="newTask" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Add</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Edit Todo Modal -->
  <div id="editModal" class="modal fade" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="editModalLabel">Edit Todo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form id="editTodoForm">
            <div class="mb-3">
              <label for="editTask" class="form-label">Task</label>
              <input type="text" id="editTask" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <footer class="footer text-center py-3 mt-5">
    <p>&copy; 2024 Persipa Wani Ngeyel</p>
  </footer>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      let editId;

      // Add new todo
      document.getElementById('addTodoForm').addEventListener('submit', function (e) {
        e.preventDefault();
        const task = document.getElementById('newTask').value.trim();
        if (task) {
          fetch('/todos', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ task })
          })
          .then(response => response.json())
          .then(newTodo => {
            const todoContainer = document.getElementById('todoContainer');
            const newCard = `
              <div class="col-md-4">
                <div class="card" data-id="${newTodo.id}">
                  <div class="card-body">
                    <h5 class="card-title">Todo</h5>
                    <p class="card-text">${newTodo.task}</p>
                    <button class="btn btn-sm btn-success editBtn">Edit</button>
                    <button class="btn btn-sm btn-danger deleteBtn">Delete</button>
                  </div>
                </div>
              </div>
            `;
            todoContainer.innerHTML += newCard;
            document.getElementById('addModal').querySelector('.btn-close').click();
            document.getElementById('newTask').value = '';
          });
        }
      });

      // Edit Todo
      document.getElementById('todoContainer').addEventListener('click', function (e) {
        if (e.target.classList.contains('editBtn')) {
          const card = e.target.closest('.card');
          editId = card.dataset.id;
          const currentTask = card.querySelector('.card-text').textContent;
          document.getElementById('editTask').value = currentTask;
          new bootstrap.Modal(document.getElementById('editModal')).show();
        }
      });

      document.getElementById('editTodoForm').addEventListener('submit', function (e) {
        e.preventDefault();
        const task = document.getElementById('editTask').value.trim();
        if (task) {
          fetch(`/todos/${editId}`, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ task })
          })
          .then(() => {
            const card = document.querySelector(`.card[data-id="${editId}"]`);
            card.querySelector('.card-text').textContent = task;
            document.getElementById('editModal').querySelector('.btn-close').click();
          });
        }
      });

      // Delete Todo
      document.getElementById('todoContainer').addEventListener('click', function (e) {
        if (e.target.classList.contains('deleteBtn')) {
          const card = e.target.closest('.card');
          const id = card.dataset.id;
          fetch(`/todos/${id}`, { method: 'DELETE' })
            .then(() => {
              card.remove();
            });
        }
      });
    });
  </script>
</body>
</html>
